<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/ivHeaderProfile"
        android:layout_width="@dimen/iv_header_width"
        android:layout_height="@dimen/iv_header_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/iv_header_margin_start"
        android:layout_marginTop="@dimen/iv_header_margin_top"
        android:layout_marginBottom="@dimen/iv_header_margin_bottom"
        android:layout_marginEnd="@dimen/iv_header_margin_end"
        app:srcCompat="@drawable/ic_muxi_logo2"
        android:contentDescription="@string/content_header_muxi_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_merchantIdHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>